<h2>Patient Show Page</h2>

<%= @patient.name %>
<br>
<h4>Appointments: </h4>
<ul>
<% @patient.appointments.each do |appointment| %>
<li>
  <%= appointment.appointment_datetime.strftime('%B %d, %Y at %k:%M') %>
  <br>
  Doctor: <%= link_to appointment.doctor.name, doctor_path(appointment.doctor) %>
</li>
<% end %>
</ul>
